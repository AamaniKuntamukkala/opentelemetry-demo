sudo docker run -d --name sonarqube -p 9000:9000 sonarqube:lts
sudo groupadd docker        # may say "group already exists"
sudo usermod -aG docker $USER
sudo systemctl status postgresql
sudo -u postgres psql
CREATE DATABASE sonarqube;
CREATE USER sonar WITH ENCRYPTED PASSWORD 'StrongPassword';
GRANT ALL PRIVILEGES ON DATABASE sonarqube TO sonar;
\q
sudo docker stop sonarqube
sudo docker rm sonarqube
sudo docker run -d --name sonarqube \
  -p 9000:9000 \
  -e SONARQUBE_JDBC_URL=jdbc:postgresql://<db-host>:5432/sonarqube \
  -e SONARQUBE_JDBC_USERNAME=sonar \
  -e SONARQUBE_JDBC_PASSWORD=StrongPassword \
  sonarqube:lts
